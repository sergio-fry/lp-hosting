<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :form_title %>
    <%= f.input :button_text %>
    <%= f.input :body %>
    <%= f.input :mailchimp_api_key %>
    <%= f.input :mailchimp_list_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
